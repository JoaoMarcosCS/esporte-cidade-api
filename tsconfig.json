{
  "compilerOptions": {
    "lib": [
      "es5",
      "es6"
    ],
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "rootDir": "./src",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/types" 
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/tests/teacher.test.js", // Incluindo todos os arquivos TypeScript
    "seeds/**/*.ts"  ],
  "exclude": [
    "node_modules"
  ]
}