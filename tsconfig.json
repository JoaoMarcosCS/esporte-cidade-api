{
  "compilerOptions": {
    "lib": [
      "es5",
      "es6",
      "es2017",
      "es2022"
    ],
    "target": "es2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "rootDir": "./src",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "resolveJsonModule": true,
    "noEmit": true,
    "allowJs": true
  },
  "include": [
    "src/**/*.ts",
    "src/tests/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}